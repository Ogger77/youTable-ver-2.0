<% include ../partials/header %>

<div id="signin" class="container text-center col-md-5 col-lg-5">
  <form action="/admin/login" method="POST">
    <img src="/img/dish.png" width='72' height='72'>
    <h1 class='h3 mb-3 font-weight-normal'>Admin please sign in</h1>
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" name='admin[email]' placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name='admin[password]' placeholder="Password">
    </div>
    <div class="form-group">
      <label for='adminPass'>Admin code</label>
      <input type="password" class='form-control' name='admin[adminPass]' placeholder="Admin code">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<% include ../partials/footer %>
