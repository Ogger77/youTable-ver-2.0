<% include ../partials/header %>

    <!-- //fillout all the label and value -->
    <div id='register' class='container text-center col-md-5 col-lg-5'>
        <img src="/img/dish.png" width='72' height='72'>
        <h1 class='h3 mb-3 font-weight-normal'>Restaurant's employee Sign Up</h1>
        
        <% include ../partials/errMsg %>

        <form action="/admin/register" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="name" name="name" placeholder="Enter name"
                        value="<%= typeof name != 'undefined' ? name : '' %>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" placeholder="Enter email"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password2" placeholder="Retype your password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <p class='lead mt-4'>Already register? <a href='/admin/login'>Login</a></p>
    </div>

<% include ../partials/footer %>
